<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
    <%= link_to("Task Addition", new_task_path) %>
    <%= link_to("User List", users_path) %>
    <%= link_to 'Logout', logout_path, method: :delete %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>My Task List</h1>
      <%= link_to 'Sign up', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

<h1>タスク一覧</h1>

<%= render 'tasks/tasks', tasks: @tasks %>

<%= paginate @tasks %>


