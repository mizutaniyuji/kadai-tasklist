<%= link_to("新規タスクの追加", new_task_path) %>

<h1>タスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
    <li><span style="font-weight: bold">進捗率:</span> <%= task.status %> <span style="font-weight: bold">タスク内容:</span> <%= link_to(task.content, "/tasks/#{task.id}") %></li>
    <% end %>
    
</ul>

<%= paginate @tasks %>


